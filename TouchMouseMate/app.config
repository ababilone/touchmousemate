<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="touchMouseMate" type="TouchMouseMate.Configuration.TouchMouseMateSection, TouchMouseMate" allowExeDefinition="MachineToLocalUser" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <touchMouseMate minClickTimeout="50" 
                  maxClickTimeout="250" 
                  moveThreshold="0.50"
                  middleClick="true"
                  touchOverClick="false"
                  moveDetect="false"
                  leftHandMode="false" />
  <log4net>
    <!-- Define some output appenders -->
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <file value="${APPDATA}\Touch Mouse Mate\logs\debug.log" />
      <appendToFile value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%level% - %message%newline" />
      </layout>
    </appender>
    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="INFO" />
        <foreColor value="White" />
      </mapping>
      <mapping>
        <level value="DEBUG" />
        <foreColor value="Yellow, HighIntensity" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%level% - %message%newline" />
      </layout>
    </appender>
    <!-- Setup the root category, add the appenders and set the default level -->
    <root>
      <level value="ALL" />
      <appender-ref ref="FileAppender" />
      <appender-ref ref="ColoredConsoleAppender" />
    </root>
  </log4net>
</configuration>